import "Common.proto";
import "Player.proto";
import "LobbyBonusV2Base.proto";

//大厅奖励的配置
message LobbyBonusV2_GetConfig_Request
{
    optional Header             header          = 1;
}
message LobbyBonus_GetConfig_Response
{
    optional Header             header          = 1;
    optional Return             ret             = 2;

    repeated BounsConfigItem    bonus_config    = 3;//在线阶段奖励的配置
    repeated WheelConfigItem    wheel_config    = 4;//转盘配置
}

//大厅奖励状态
message LobbyBonusV2_GetStatus_Request
{
    optional Header             header          = 1;
}
message LobbyBonusV2_GetStatus_Response
{
    optional Header             header          = 1;
    optional Return             ret             = 2;

    optional int64              bonus_stage     = 3;//在那个阶段的奖励，对应BounsConfigItem.id
    optional int64              left_time       = 4; //剩余等待时间
}

//获取转盘奖励
message LobbyBonusV2_GetBonus_Request
{
    optional Header             header          = 1;
}
message LobbyBonusV2_GetBonus_Response
{
    optional Header             header          = 1;
    optional Return             ret             = 2;

    optional Player             player          = 3;//同步玩家的筹码
    optional int64              bonus_chip      = 4;//玩家获得的筹码数
    optional int64              wheel_idx       = 5;//转盘的结果索引(为转盘奖励时，此字段有效)
    optional int64              bonus_stage     = 6;//领取后的下个奖励阶段
    optional int64              left_time       = 7; //领取后的下个奖励的剩余等待时间
}
