import "Player.proto";
import "Common.proto";

message ShopBonus_GetStatus_Request {
    optional Header header = 1;
}

message ShopBonus_GetStatus_Response {
    optional Header header = 1;
    required Return ret = 2;
    optional int64 can_collect = 3;   // 0表示不可领取,1表示可领取
    optional int64 chip_may_get = 4;  //这次领取能领到多少筹码
    optional int64 cool_time = 5;     //冷却时间
}

message ShopBonus_GetBonus_Request {
    optional Header header = 1;
}

message ShopBonus_GetBonus_Response {
    optional Header header = 1;
    required Return ret = 2;
    optional Player player = 3;   //同步chip
    optional int64 chip_get = 4;  //玩家获得的chip数
    optional int64 cool_time = 5;     //冷却时间
}
