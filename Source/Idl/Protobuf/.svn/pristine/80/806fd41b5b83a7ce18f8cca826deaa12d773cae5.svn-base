import "Player.proto";
import "Common.proto";

//lobby bonus显示请求
message LobbyBonus_Display_Request
{
    optional Header header = 1;
}

message LobbyBonus_Display_Response
{
    optional Header header = 1;
    required Return ret = 2;
    optional int64 can_collect = 3;//0表示不可领取,1表示可领取
    optional int64 chip_may_get = 4;//这次领取能领到多少筹码
    optional int64 acc_seconds = 5;//玩家累计的时间
    optional int64 collect_times = 6;//玩家累计的次数
}

//lobby bonus领取请求
message LobbyBonus_Collect_Request
{
    optional Header header = 1;
}

message LobbyBonus_Collect_Response
{
    optional Header header = 1;
    required Return ret = 2;
    optional Player player = 3;//同步chip
    optional int64 chip_get = 4;//玩家获得的chip数
}

message LobbyBonus_CollectPot_Request
{
    optional Header header = 1;
}

message LobbyBonus_CollectPot_Response
{
    optional Header header = 1;
    required Return ret = 2;
    optional Player player = 3;//同步chip
    optional int64 chip_get = 4;//玩家获得的chip数
}

message LobbyBonus_PotCountDown_Request
{
    optional Header header = 1;
}

message LobbyBonus_PotCountDown_Response
{
    optional Header header = 1;
    required Return ret = 2;
    optional int64 left_limit_time  = 3;
    optional int64 left_collect_time = 4;
    optional int64 pot_points = 5;
    optional int64 purchased_pot = 6;	
}

//lobby 倍增大奖请求
message LobbyBonus_Multiply_Request
{
    optional Header header = 1;
	optional int64 amount = 2;
}

message LobbyBonus_Multiply_Response
{
    optional Header header = 1;
	required Return ret = 2;
	optional int32  conf_index = 3;//配置索引
	optional int64  amount = 4;//获得的chip数
    optional Player player = 5;
    optional int64 diff_amount = 6;
    optional int64 goods_id = 7;
}

//玩家累计每三十分钟，玩家请求奖励
message LobbyBonus_LoginAward_Request
{
    optional Header header = 1;
}

message LobbyBonus_LoginAward_Response
{
    optional Header header = 1;
	required Return ret = 2;
	optional int64  time = 3;//当前时间
    optional Player player = 4;
}

//添加好友请求
message LobbyBonus_AddFrd_Request
{
    optional Header header = 1;
	optional int64 frd_id = 2;//好友ID
}

message LobbyBonus_AddFrd_Response
{
    optional Header header = 1;
	required Return ret = 2;
}

//申请好友列表请求
message LobbyBonus_ApplyFrd_Request
{
    optional Header header = 1;
}

message LobbyBonus_ApplyFrd_Response
{
    optional Header header = 1;
	required Return ret = 2;
    repeated Player friend_list = 3;
}

//接受或拒绝好友请求
message LobbyBonus_IgnoreOrAcceptFrd_Request
{
    optional Header header = 1;
	optional int64 frd_id = 2;//好友ID
    optional int32 action = 3;//0拒绝，1同意
}

message LobbyBonus_IgnoreOrAcceptFrd_Response
{
    optional Header header = 1;
	required Return ret = 2;
    optional Player friend = 3;
    repeated int64 frd_id = 4;
}

//好友列表请求
message LobbyBonus_FrdList_Request
{
    optional Header header = 1;
}

message LobbyBonus_FrdList_Response
{
    optional Header header = 1;
	required Return ret = 2;
    repeated Player online_friend_list = 3;
	repeated Player offline_friend_list = 4;
}

//在线好友列表请求
message LobbyBonus_OnlineFrdList_Request
{
    optional Header header = 1;
}

message LobbyBonus_OnlineFrdList_Response
{
    optional Header header = 1;
	required Return ret = 2;
    repeated Player friend_list = 3;
}

//好友信息
message LobbyBonus_FrdInfo_Request
{
    optional Header header = 1;
    optional int64 frd_id = 2;//好友ID 
}

message LobbyBonus_FrdInfo_Response
{
    optional Header header = 1;
	required Return ret = 2;
    optional int32 table_id = 3;
    optional Player player = 4;
}

//邀请好友加入游戏请求
message LobbyBonus_InviteFrd_Request
{
    optional Header header = 1;
    repeated int64 frd_id_list = 2;
}

message LobbyBonus_InviteFrd_Response
{
    optional Header header = 1;
	required Return ret = 2;
}

//解锁玩法
message LobbyBonus_UnLock_Request
{
    optional Header header = 1;
    optional int32 game_type = 2;//玩法类型
}

message LobbyBonus_UnLock_Response
{
    optional Header header = 1;
	required Return ret = 2;
    optional Player player = 3;
}

//Cash Casino请求
message LobbyBonus_CashCasino_Request
{
    optional Header header = 1;
    optional int32  chips = 2;
}

message LobbyBonus_CashCasino_Response
{
    optional Header header = 1;
	required Return ret = 2;
}

//Jackpot信息请求
message LobbyBonus_Jackpot_Request
{
    optional Header header = 1;
}

message LobbyBonus_Jackpot_Response
{
    optional Header header = 1;
	required Return ret = 2;
    optional int64 alicein_wonderland_jackpot = 3;//爱丽丝的jackpot值
    optional int64 elves_epic_jackpot = 4;//精灵的jackpot值
}