import "Common.proto";
import "Player.proto";
import "Contest.proto";
import "Slots.proto";

message SlotsPharaohTreasure_Enter_Request
{
	optional Header header = 1;
	optional int32 table_id = 2;
}

message SlotsPharaohTreasure_Enter_Response
{
	optional Header header = 1;
	required Return ret = 2;
	optional Player player = 3;
	repeated PickHistory history = 4;//进场时用于恢复小游戏的现场用的,如果player身上的choose_times>0,那么该玩家进小游戏,这个history数据用于恢复小游戏状态
}

message SlotsPharaohTreasure_Start_Request
{
	optional Header header = 1;
	optional int64 amount = 2;
}

message SlotsPharaohTreasure_Start_Response
{
	optional Header header = 1;
	required Return ret = 2;
	repeated int64 item_ids = 3;
	optional Player player = 4;
	repeated int64 prize_multi = 5;
	repeated Slots_PrizeItem prize_items = 6;
    optional int64 win_chip = 7;
	optional int64 is_multiply = 8;
	optional int64 is_free_spin = 9;
}

message SlotsPharaohTreasure_Exit_Request
{
	optional Header header = 1;
}

message SlotsPharaohTreasure_Exit_Response
{
	optional Header header = 1;
	required Return ret = 2;
	optional Player player = 3;
}

message SlotsPharaohTreasure_Pick_Request
{
	optional Header header = 1;
	optional int64 index = 2;//pick的格子的index,从左到右,从1数起
}

message SlotsPharaohTreasure_Pick_Response
{
	optional Header header = 1;
	required Return ret = 2;
	optional int64 win_chip = 3;//在没有开出upstairs时赢取的筹码或是到达顶层时获得的筹码
	optional Player player = 4;
	optional int64 upstairs = 5;//告诉玩家是否上升一级,1:true, 0:false
}

message SlotsPharaohTreasure_TableSync_Notice
{
	optional Header header = 1;
	optional Table table = 2;
}

